<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <Button
        android:id="@+id/btn_start_audio_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_button_text" />



    	<ImageButton
    	    android:id="@+id/btn_start_audio_record"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_below="@+id/screenText"
    	    android:layout_marginRight="69dp"
    	    android:layout_marginTop="42dp"
    	    android:layout_toRightOf="@+id/btn_start_audio_play"
    	    android:background="@null"
    	    android:scaleType="fitCenter"
    	    android:src="@drawable/send_button" />
    	
    	    	<TextView
    	    android:id="@+id/screenText"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignRight="@id/btn_start_audio_record"
    	    android:layout_below="@id/btn_start_audio_play"
    	    android:layout_marginTop="32dp"
    	    android:layout_toRightOf="@id/btn_start_audio_play"
    	    android:background="@drawable/display"
    	    android:text="@string/display_text"
    	    android:textSize="10pt" />
    	
</RelativeLayout>